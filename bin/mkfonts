#!/bin/sh

# Copyright (c) 2013
# Author: Jeff Weisberg <jaw @ tcp4me.com>
# Created: 2013-Mar-31 13:05 (EDT)
# Function: make fonts


FONTS=`ls -1 font | grep bdf | sed s/.bdf//`

for f in $FONTS; do
    echo $f
    bf=`basename $f | sed 's/-/_/g'`
    bin/bdftoc font/$f.bdf > src/font/$bf.c
    bin/bdftoc -n font/$f.bdf > src/font/$bf\_n.c
done

